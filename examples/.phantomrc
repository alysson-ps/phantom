{
    "extends": [],
    "logs": {
        "level": "info",
        "file": "~/phantom/logs/phantom.log"
    },
    "files": [
        "app/**/*.php"
    ],
    "imports": {
        "organize": {
            "enabled": true
        }
    },
    "rules": {
        "disallow-debug-functions": [
            "warn",
            {
                "functions": [
                    "die",
                    "var_dump",
                    "print_r"
                ]
            }
        ]
    }
}